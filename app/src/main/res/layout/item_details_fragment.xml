<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".showAds.ui.fragments.ItemDetailsDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="400dp"
        android:minHeight="400dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/tagNameItemDetailTitle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_weight=".5"
                android:text="@string/text_appId"
                tools:text="AppId" />

            <TextView
                android:id="@+id/mTextViewAppIdItemDetails"
                style="@style/tagNameItemDetailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                tools:text="AppId" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/tagNameItemDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_weight=".5"
                android:text="@string/text_averageRatingImageURL"
                tools:text="AppId" />

            <TextView
                android:id="@+id/mTextViewAverageRatingImageURLItemDetails"
                style="@style/tagNameItemDetailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                tools:text="AppId" />
        </LinearLayout>

    </LinearLayout>
</layout>
